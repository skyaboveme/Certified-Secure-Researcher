---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Apply - Certified Secure Researcherâ„¢">
	<Header currentPage="signup" />

	<!-- Signup Section -->
	<section class="signup-section">
		<div class="container">
			<div class="signup-layout">
				<!-- Form Column -->
				<div class="form-column">
					<div class="form-card">
						<h2>Application for CSR Certification</h2>
						<p class="form-subtitle">
							Begin your application for verified research
							security readiness
						</p>

						<form class="signup-form">
							<div class="form-group">
								<label for="firstName"
									>First Name <span class="required">*</span
									></label
								>
								<input
									type="text"
									id="firstName"
									name="firstName"
									required
									placeholder="Enter your first name"
								/>
							</div>

							<div class="form-group">
								<label for="lastName"
									>Last Name <span class="required">*</span
									></label
								>
								<input
									type="text"
									id="lastName"
									name="lastName"
									required
									placeholder="Enter your last name"
								/>
							</div>

							<div class="form-group">
								<label for="institution"
									>Institution <span class="required">*</span
									></label
								>
								<input
									type="text"
									id="institution"
									name="institution"
									required
									placeholder="Your affiliated institution"
								/>
							</div>

							<div class="form-group">
								<label for="workEmail"
									>Work Email <span class="required">*</span
									></label
								>
								<input
									type="email"
									id="workEmail"
									name="workEmail"
									required
									placeholder="your.email@institution.edu"
								/>
							</div>

							<div class="form-group">
								<label for="orcid"
									>ORCiD iD <span class="optional"
										>(Optional)</span
									></label
								>
								<input
									type="text"
									id="orcid"
									name="orcid"
									placeholder="0000-0000-0000-0000"
								/>
								<a
									href="https://orcid.org/register"
									target="_blank"
									class="helper-link"
									>Need an ORCiD? Register here</a
								>
							</div>

							<div class="checkbox-group">
								<label class="checkbox-label">
									<input type="checkbox" name="noOrcid" />
									<span
										>I do not have an ORCiD iD. We will help
										you identify your profile using your
										publications.</span
									>
								</label>
							</div>

							<button
								type="submit"
								class="btn btn-primary btn-large"
								>Submit Application</button
							>

							<p class="login-link">
								Already registered? <a
									href="https://app.certifiedsecureresearcher.com/login"
									>Log in here</a>
							</p>
						</form>
					</div>
				</div>

				<!-- Info Column -->
				<div class="info-column">
					<div class="info-card">
						<h3>Required Documentation</h3>
						<ul class="info-list">
							<li>
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<polyline points="20 6 9 17 4 12"
									></polyline>
								</svg>
								<span
									>Legal name as it appears on grant proposals</span
								>
							</li>
							<li>
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<polyline points="20 6 9 17 4 12"
									></polyline>
								</svg>
								<span
									>Current institutional affiliation with work
									email</span
								>
							</li>
							<li>
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<polyline points="20 6 9 17 4 12"
									></polyline>
								</svg>
								<span
									>ORCiD identifier or publication history</span
								>
							</li>
						</ul>
					</div>

					<div class="info-card">
						<h3>Data Collection Notice</h3>
						<ul class="info-list">
							<li>
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<circle cx="12" cy="12" r="10"></circle>
									<line x1="12" y1="16" x2="12" y2="12"
									></line>
									<line x1="12" y1="8" x2="12.01" y2="8"
									></line>
								</svg>
								<span
									>Identity authentication and verification</span
								>
							</li>
							<li>
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<circle cx="12" cy="12" r="10"></circle>
									<line x1="12" y1="16" x2="12" y2="12"
									></line>
									<line x1="12" y1="8" x2="12.01" y2="8"
									></line>
								</svg>
								<span
									>Pre-populate disclosure documentation</span
								>
							</li>
							<li>
								<svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<circle cx="12" cy="12" r="10"></circle>
									<line x1="12" y1="16" x2="12" y2="12"
									></line>
									<line x1="12" y1="8" x2="12.01" y2="8"
									></line>
								</svg>
								<span
									>Link to federal research security systems</span
								>
							</li>
						</ul>
					</div>

					<div class="info-card">
						<h3>Contact Support</h3>
						<p>For assistance with your application:</p>
						<a
							href="mailto:support@certifiedsecureresearcher.com"
							class="contact-email"
							>support@certifiedsecureresearcher.com</a
						>
						<p class="assistance-note">
							Review the <a href="/resources">Resources</a> section
							for additional guidance.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<Footer />
</BaseLayout>

<style>
	/* Signup Section */
	.signup-section {
		padding: 4rem 0;
		background: var(--bg);
		min-height: calc(100vh - 200px);
	}

	.signup-layout {
		display: grid;
		grid-template-columns: 1fr 400px;
		gap: 3rem;
		align-items: start;
	}

	/* Form Column */
	.form-column {
		max-width: 600px;
	}

	.form-card {
		background: white;
		padding: 3rem;
		border-radius: 0;
		border: 2px solid var(--primary);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	.form-card h2 {
		color: var(--dark);
		margin-bottom: 0.5rem;
		font-size: 1.75rem;
	}

	.form-subtitle {
		color: var(--gray);
		margin-bottom: 2rem;
		font-size: 1rem;
	}

	/* Form Styles */
	.signup-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		font-weight: 600;
		color: var(--dark);
		margin-bottom: 0.5rem;
		font-size: 0.9375rem;
	}

	.required {
		color: var(--danger);
		font-weight: 700;
	}

	.optional {
		color: var(--gray);
		font-weight: 400;
		font-size: 0.875rem;
	}

	.form-group input {
		padding: 0.875rem 1rem;
		border: 2px solid var(--light-gray);
		border-radius: 0;
		font-size: 1rem;
		transition: all 0.2s;
		font-family: inherit;
	}

	.form-group input:focus {
		outline: none;
		border-color: var(--primary);
		box-shadow: 0 0 0 3px rgba(30, 58, 95, 0.1);
	}

	.helper-link {
		display: inline-block;
		margin-top: 0.5rem;
		color: var(--primary);
		font-size: 0.875rem;
		text-decoration: none;
		font-weight: 600;
	}

	.helper-link:hover {
		text-decoration: underline;
	}

	.checkbox-group {
		margin: 0.5rem 0;
	}

	.checkbox-label {
		display: flex;
		align-items: start;
		gap: 0.75rem;
		cursor: pointer;
		font-size: 0.9375rem;
		color: var(--dark);
	}

	.checkbox-label input[type="checkbox"] {
		margin-top: 0.25rem;
		width: 18px;
		height: 18px;
		cursor: pointer;
		accent-color: var(--primary);
	}

	.btn-large {
		width: 100%;
		padding: 1.125rem 2rem;
		font-size: 1rem;
		margin-top: 1rem;
		font-weight: 700;
		letter-spacing: 0.025em;
	}

	.login-link {
		text-align: center;
		color: var(--gray);
		margin-top: 1rem;
		font-size: 0.9375rem;
	}

	.login-link a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
	}

	.login-link a:hover {
		text-decoration: underline;
	}

	/* Info Column */
	.info-column {
		position: sticky;
		top: 100px;
	}

	.info-card {
		background: white;
		padding: 2rem;
		border-radius: 0;
		margin-bottom: 1.5rem;
		border: 2px solid var(--light-gray);
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
	}

	.info-card h3 {
		color: var(--dark);
		margin-bottom: 1.25rem;
		font-size: 1.125rem;
		font-weight: 700;
	}

	.info-list {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.info-list li {
		display: flex;
		align-items: start;
		gap: 0.75rem;
		color: var(--gray);
		line-height: 1.5;
	}

	.info-list svg {
		flex-shrink: 0;
		color: var(--primary);
		margin-top: 0.125rem;
	}

	.info-card p {
		color: var(--gray);
		line-height: 1.6;
	}

	.contact-email {
		display: inline-block;
		color: var(--primary);
		font-weight: 600;
		text-decoration: none;
		margin: 1rem 0;
		padding: 0.75rem 1.25rem;
		background: var(--bg);
		border: 1px solid var(--light-gray);
		transition: all 0.2s;
	}

	.contact-email:hover {
		border-color: var(--primary);
		background: white;
	}

	.assistance-note {
		color: var(--gray);
		font-size: 0.875rem;
		margin-top: 1rem;
	}

	.assistance-note a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
	}

	.assistance-note a:hover {
		text-decoration: underline;
	}

	/* Responsive */
	@media (max-width: 968px) {
		.signup-layout {
			grid-template-columns: 1fr;
		}

		.info-column {
			position: static;
		}

		.form-card {
			padding: 2rem;
		}
	}
</style>
